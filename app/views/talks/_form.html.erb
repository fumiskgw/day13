<%= form_for(@talk) do |f| %>
  <% if @talk.errors.any? %>
    <div id="error_explanation">
      <h2><%= @talk.errors.count %>件のエラーがあります。</h2>
      
      <ul>
        <% @talk.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :コメント %>
  <%= f.text_field :comment %>
  <br>
  <%= f.submit %>
<% end %>